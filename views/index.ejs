<% include ./partials/header %>

<center><h1 id="usernum"><%= founduser.phonenum %></h1></center>

<div class="container">
	<div class="index-container">
		<div class="inner-form-container">
		<form id="messageform" enctype="multipart/form-data">
       <div class="form-group">
        <label class="label-text"  for="exampleInputnumber">To</label>
        <input type="number" class="form-control" id="exampleInputnumber" aria-describedby="emailHelp" placeholder="Enter Phone Number" >
       </div>
       <div class="form-group">
          <label for="text" class="label-text" >Message</label>
			<textarea class="form-control" id="text" rows="4" placeholder="Text message" name="message"></textarea>
        </div>
		 <div class="form-group" id="last-formelm">
          <label for="file" class="label-text" >Attach Photo to this Text Message</label>
			<input type="file" id="file" accept="image/png, image/jpeg">
        </div>
		  
     <button type="submit" class="btn btn-primary">Send Text Message</button>
   </form>
		</div>
	<div class="alltabes">
		<ul class="nav nav-tabs" id="myTab" role="tablist">
     <li class="nav-item">
        <a class="nav-link active" id="recent-tab" data-toggle="tab" href="#recentchat" role="tab" aria-controls="home" aria-selected="true">Recent Conversation</a>
     </li>
     <li class="nav-item">
        <a class="nav-link" id="all-chats" data-toggle="tab" href="#allchats" role="tab" aria-controls="profile" aria-selected="false">All Conversation</a>
     </li>
     <li class="nav-item">
        <a class="nav-link" id="images-session" data-toggle="tab" href="#images" role="tab" aria-controls="contact" aria-selected="false">Photos</a>
     </li>
   </ul>
   <div class="tab-content" id="myTabContent">
	   <div class="chatbox tab-pane fade show active" id="recentchat" role="tabpanel" aria-labelledby="recent-tab">
	   </div>
	   <div class="chatbox-2 tab-pane fade" id="allchats" role="tabpanel" aria-labelledby="all-chats" >
	   </div>
    <div class="chatbox-3 tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-session">
	   <div class="row" id="main-row">
		 
		</div>
	   </div>
   </div>
	</div>
		
</div>

<% include ./partials/footer %>